            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Sports Facility\",\n  \"address\": \"Example Street 123\",\n  \"city\": \"Stockholm\",\n  \"postal_code\": \"12345\",\n  \"kommun_id\": 1,\n  \"facility_type_id\": 1,\n  \"external_id\": \"EXT-001\",\n  \"latitude\": 59.3293,\n  \"longitude\": 18.0686\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/facilities",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "facilities"]
            },
            "description": "Create a new facility with optional geometry (latitude/longitude)"
          },
          "response": []
        },
